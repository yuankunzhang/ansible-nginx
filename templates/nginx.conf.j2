{# See here: https://www.nginx.com/resources/wiki/start/topics/examples/full/ #}
user {{ nginx_conf_user }};
worker_processes {{ nginx_conf_worker_processes }};

error_log  {{ nginx_conf_error_log }};
pid        {{ nginx_conf_pidfile }};
worker_rlimit_nofile {{ nginx_conf_worker_rlimit_nofile }};

events {
  worker_connections  {{ nginx_conf_worker_connections }};
}

http {
  include    {{ nginx_conf_dir }}/mime.types;
  index    index.html index.htm index.php;

  default_type application/octet-stream;
  log_format   {{ nginx_conf_log_format }};
  access_log   {{ nginx_conf_access_log }};
  sendfile     {{ nginx_conf_sendfile }};
  tcp_nopush   {{ nginx_conf_tcp_nopush }};
  server_names_hash_bucket_size {{ nginx_conf_server_names_hash_bucket_size }};

  include /etc/nginx/conf.d/*.conf;
}
